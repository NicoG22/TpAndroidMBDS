<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionButton"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_menu_panier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:contentDescription="@string/btn_view_detail_produit_ajouter_panier"
        android:gravity="center"
        android:src="@drawable/basket" />

    <TextView
        android:id="@+id/txt_badge_panier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/img_menu_panier"
        android:layout_alignTop="@id/img_menu_panier"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:minWidth="17sp"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="1"
        android:background="@drawable/shape_badge_opaque_red"
        android:textColor="#ffffffff"
        android:textSize="12sp" />
</RelativeLayout>